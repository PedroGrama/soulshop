<section class="m-1">
  <a href="/lojas/novo" class="btn btn-dark">
    <i class="bi bi-plus"></i>
    Adicionar Loja
  </a>
  <hr />
  <form method="GET">
    <input
      type="text"
      name="nomeLoja"
      placeholder="Nome da Loja"
      class="form-control form-control-sm"
      value="{{nomeLoja}}"
    />
    <button class="btn btn-sm btn-dark mt-1">
      <i class="bi bi-search"></i>
      Buscar
    </button>
  </form>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <th>Nome</th>
        <th>Endere√ßo</th>
        <th>Categoria</th>
      </thead>
      <tbody>
        {{#each lojas}}
          <tr>
            <td>{{this.nome}}</td>
            <td>{{this.endereco}}</td>
            <td>{{this.categoria}}</td>
            <td>
              <div class="d-flex">
                <div>
                  <a
                    href="/lojas/editar/{{this._id}}"
                    class="btn btn-sm btn-warning mx-1"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>
                <div>
                  <form action="/lojas/deletar" method="POST">
                  <input name="id" type="hidden" value="{{this._id}}">
                  <button class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i>
                  </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>