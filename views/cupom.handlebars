<section class="m-1">
  <a href="/cupom/novo" class="btn btn-dark">
    <i class="bi bi-plus"></i>
    Criar Cupom
  </a>
  <hr />
  <form method="GET">
    <input
      type="text"
      name="codigo"
      placeholder="Codigo do Cupom"
      class="form-control form-control-sm"
      value="{{codigo}}"
    />
    <button class="btn btn-sm btn-dark mt-1">
      <i class="bi bi-search"></i>
      Buscar
    </button>
  </form>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <th>Codigo</th>
        <th>Data de Validade</th>
        <th>Descrição</th>
        <th>Quantidade</th>
        <th>Valor</th>
      </thead>
      <tbody>
        {{#each cupom}}
          <tr>
            <td>{{this.codCupom}}</td>
            <td>{{this.dataValidade}}</td>
            <td>{{this.descricao}}</td>
            <td>{{this.quantidade}}</td>
             <td>{{this.valor}}</td>
            <td>
              <div class="d-flex">
                <div>
                  <a
                    href="/cupom/editar/{{this._id}}"
                    class="btn btn-sm btn-warning mx-1"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>
                <div>
                  <form action="/cupom/deletar" method="POST">
                  <input name="id" type="hidden" value="{{this._id}}">
                  <button class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i>
                  </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>