<div class="m-1">
  <h2>Editar produto</h2>
  <hr />
  <form action="/cupom/atualizar" method="POST">
  <input name="id" type="hidden" value="{{cupom._id}}">
    <div class="form-group">
      <label for="codCupom">Codigo</label>
      <input type="text" name="codCupom" id="codCupom" class="form-control" value="{{cupom.codCupom}}" required />
    </div>
    <div class="form-group">
      <label for="price">Preço*</label>
      <input
        type="number"
        name="dataValidade"
        id="dataValidade"
        class="form-control"
        value="{{codCupom.dataValidade}}"
        step=".1"
        required
      />
    </div>
    <div class="form-group">
      <label for="description">Descrição*</label>
      <textarea
        name="description"
        id="description"
        rows="10"
        class="form-control"
        required
      >{{produto.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="quantity">Quantidade*</label>
      <input
        type="number"
        name="quantity"
        id="quantity"
        class="form-control"
        value="{{produto.quantity}}"
        required
      />
    </div>
    <button class="btn btn-primary mt-2">Atualizar</button>
  </form>
</div>